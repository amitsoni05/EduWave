@model CrudStudentProject.Models.Student 

@{
    ViewData["Title"] = "Delete Student";
}

<h2>Delete Student</h2>

@* <h3>Are you sure you want to delete this student?</h3> *@


<form asp-action="DeleteConfirmed" method="post" asp-route-id="@Model.StudentId">
    <input type="hidden" asp-for="StudentId" />
    <div>
        <h4>Student</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                First Name
            </dt>
            <dd class="col-sm-10">
                @Model.FirstName
            </dd>
            <dt class="col-sm-2">
                Last Name
            </dt>
            <dd class="col-sm-10">
                @Model.LastName
            </dd>
            <dt class="col-sm-2">
                Email
            </dt>
            <dd class="col-sm-10">
                @Model.Email
            </dd>
            <dt class="col-sm-2">
                Enrollment Date
            </dt>
            <dd class="col-sm-10">
                @Model.EnrollmentDate?.ToString("yyyy-MM-dd")
            </dd>
            <dt class="col-sm-2">
                Is Active
            </dt>
            <dd class="col-sm-10">
                @Model.IsActive
            </dd>
        </dl>
    </div>
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
